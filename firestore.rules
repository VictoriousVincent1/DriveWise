rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow read access to dealerships for everyone
    match /dealerships/{dealershipId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read access to vehicles for everyone
    match /vehicles/{vehicleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Trade-ins subcollection
      match /trade-ins/{tradeInId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Dealers collection - dealers can read/write their own data
    match /dealers/{dealerId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == dealerId;
    }
    
    // Appointments - users can read/write their own, dealers can read all
    match /appointments/{appointmentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && 
        (resource.data.userId == request.auth.uid || resource.data.dealerId == request.auth.uid);
    }
  }
}
